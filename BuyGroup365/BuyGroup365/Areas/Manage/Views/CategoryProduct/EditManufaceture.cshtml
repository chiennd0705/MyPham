@using MvcPaging
@model  Common.Manufacturer

@{
    ViewBag.Title = "Manufaceture";
    Layout = "~/Areas/Manage/Views/Shared/_LayoutAdmincshtml.cshtml";
}

<div class="container-fluid">
    <!-- Page Heading -->
    @Html.Raw(BuyGroup365.Areas.Manage.Models.AdminFunction.BindHeader("Danh sách nhà sản xuất", null, null, null, null))
    <!-- /.row -->
    <!-- /.row -->
    <!-- /.row -->

    <div class="row" ng-controller="Index">
        <div class="col-lg-12">
            <div class="panel panel-default">
                @using (Html.BeginForm("EditManufaceture", "CategoryProduct", FormMethod.Post, new { enctype = "multipart/form-data", id = "EditManufaceture" }))
                {
                    @Html.ValidationSummary(true)
                    <div class="modal-top">
                        <a type="button" class="btn btn-default" onclick="window.history.back();">Trở về</a>

                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>
    <input id="Id" name="Id" type="hidden" value="@Model.Id" />
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="form-group">
                                    <label>Manufaceture name<span class="required">*</span></label><br />
                                    <input class="form-control" autocomplete="off" maxlength="50" required id="manufaceturename" name="manufaceturename" value="@Model.ManufacturerName" type="text">
                                </div>
                                <div class="form-group">
                                    <label>Icon</label><br />
                                    <input class="form-control" autocomplete="off" style="width: 500px" id="icon" name="icon" type="file">
                                </div>

                                <div class="form-group">
                                    <label>Description</label><br />
                                    <textarea class="form-control" cols="5" style="width: 100%" id="dicription" name="dicription">@Model.Description</textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">

                        <button type="submit" class="btn btn-primary">Cập nhật</button>
                    </div>

                }
            </div>
        </div>
    </div>