        @*Add Properties*@
        <div class="modal fade" id="AddProperties" tabindex="-1" role="dialog" aria-labelledby="AddPropertiesModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">    Thêm thuộc tính</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <input type="hidden" id="catlg" />
                            <div class="form-group col-lg-4">
                                <label>Tên<span class="required">*</span></label><br />
                                <input class="form-control" autocomplete="off" maxlength="50" required id="nameproperty" name="nameproperty" type="text" value="">
                            </div>
                            <div class="form-group col-lg-4" style="display:none;">
                                <label>Kiểu<span class="required">*</span></label><br />
                                <input type="checkbox" id="typevalue" value="1" onclick="SetCheck()" checked="checked"> Loại check box?
                            </div>
                            <div class="form-group col-lg-4">
                                <label>Kiểu hiển thị<span class="required"></span></label><br />

                                <input type="checkbox" id="typedesign" value="1" onclick="SetCheckdesign()" checked="checked"> Hiển thị 1 dòng
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div id="value"></div>
                            <div style="float:right"><a onclick="Addvalue()" class="btn btn-primary btn-sm">Thêm giá trị</a></div>
                            <input type="hidden" id="allvalue" />
                            <input id="index" value="1" type="hidden" />
                        </div>
                        <script>

                            function Addvalue() {
                                var index = $("#index").val();
                                var html = "";
                                html += "<p><i class=\"fa fa-angle-double-right\">   </i> <input id='value" + index + "' onchange=\"SendValue(" + index + ")\"></p>";
                                $("#value").append(html);
                                index++;
                                $('#index').val(index);
                            }
                            function SetCheck() {
                                var a = $('#typevalue').is(":checked");
                                if (!a) {
                                    $('#typevalue').val(1);
                                } else { $('#typevalue').val(2); }

                            }
                            function SetCheckdesign() {
                                var a = $('#typedesign').is(":checked");
                                if (a) {
                                    $('#typedesign').val(1);
                                } else { $('#typedesign').val(2); }

                            }

                            function AddvalueFormUpdate(i) {
                                var index = $("#contentproperty").val();
                                var html = "";
                                html += "<p id=\"properties_value_" + i + "\">+  <input id=\"properties_value_edit\" type=\"text\" /><a class=\"update_2\" onclick=\"AddPropertiesValueByUpdate(" + i + ")\">Thêm</a></p>";
                                $("#valueUpdate").append(html);
                                index++;
                                $('#contentproperty').val(index);
                            }
                        </script>
                    </div>
                    <div class="modal-footer">
                        <span style="color: red"><i>(Vui lòng 'thêm giá trị' trước khi thêm mới)</i></span> <a class="btn btn-default" data-toggle="modal" data-target="#AddProperties" onclick="Addproperty()">
                            Thêm mới
                        </a>
                        <script>
                            function Addproperty() {
                                $('#index').val(1);
                                $('#overbackgroud').show();
                                var cat = $('#catlg').val();
                                //      alert(cat);
                                var name = $('#nameproperty').val();
                                //  var key = $('#keyproperty').val();
                                var type = $('#typevalue').val();
                                var typedesgin = $('#typedesign').val();
                                var value = $('#allvalue').val();
                                var objval = value.split('|');
                                var htmlval = "";

                                $.ajax({
                                    url: '@Url.Action("AddProperty","CategoryProduct")',
                                    data: {
                                        'nameproperty': name,
                                        'typevalue': type,
                                        'typedesgin': typedesgin,
                                        'cate': cat,
                                        'allvalue': value
                                    },
                                    dataType: "json",
                                    type: "POST",
                                    traditional: true,
                                    success: function (data, status) {
                                        $('#contentproperty').append(data);

                                        $('#overbackgroud').hide();

                                    },
                                    error: function () {

                                    }

                                });

                            }
                            function AddPropertiesValueByUpdate(id) {

                                var value = $('#properties_value_edit').val();

                                $.ajax({
                                    url: '@Url.Action("AddPropertyUpdate", "CategoryProduct")',
                                    data: {
                                        'id': id,
                                        'propertyvalue': value,

                                    },
                                    dataType: "json",
                                    type: "POST",
                                    traditional: true,
                                    success: function (data, status) {
                                        if (data == 1) {
                                            alert("Cập nhật thành công");
                                            window.location.href = "/Manage/CategoryProduct/Index";
                                            //     $scope.GetInfoUser();
                                        }

                                    },
                                    error: function () {

                                    }

                                });

                            }
                            function SendValue(id) {
                                var index = $('#index').val();
                                var ix = parseInt(index);
                                var htm = "";
                                for (var i = 1; i < ix; i++) {
                                    var vl = $('#value' + i).val();
                                    if (vl != "") {
                                        htm += vl + "|";
                                    }
                                }
                                //var a = $('#allvalue').val();
                                //var b = $('#value' + id).val();
                                //var ctx = a + b + '|';
                                $('#allvalue').val(htm);

                            }
                        </script>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                    </div>
                </div>
            </div>
