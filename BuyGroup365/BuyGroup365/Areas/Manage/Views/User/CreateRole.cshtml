@model Common.Role

@{
    ViewBag.Title = "Thêm mới role";
}
@{   Layout = "~/Areas/Manage/Views/Shared/_LayoutUser.cshtml";}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">
                Thêm mới role
            </h1>
        </div>
    </div>

    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">
                        <i class="fa fa-bar-chart-o fa-fw"></i> Thêm mới role
                        <span style="float: right">
                         @Html.ActionLink("Trở về", "Roles", null, new { @class = "glyphicon glyphicon-refresh" })
                        </span>
                    </h3>
                </div>
                <div class="panel-body">

                  @using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="form-group">
        <label >Mã role<span class="required">*</span></label><br />
        @Html.TextBoxFor(model => model.Code, new { @class = "form-control", @maxlength = "20" })
    </div>
    <div class="form-group">
        <label>Tên role<span class="required">*</span></label><br />
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control", @maxlength = "150" })
    </div>
    <div class="form-group">
        <label>Trạng thái</label><br />
        @Html.DropDownListFor(model => model.Status, (IEnumerable<SelectListItem>)ViewBag.ListItemStatus, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Mô tả</label><br />
        @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @rows = "3", @maxlength = "4000" })
    </div>
    <div class="button-box">
        <input type="submit" name="button" id="button" value="Create" class="st-button" />
        @Html.ActionLink("Trở về", "Roles", null, new { @class = "st-button" })
    </div>

}
                </div>
            </div>
        </div>
    </div>
</div>