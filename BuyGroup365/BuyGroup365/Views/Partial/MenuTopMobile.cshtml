@using BuyGroup365.Models.Common;
@using Common;
@using Business.ClassBusiness;
<div class="container-fluid header-mobile">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="list-menu">
                    <ul class="list-main list-mobile">
                        @{
                            MenusBusiness menubussiness = new MenusBusiness();
                            List<Common.Menus> ListMenu = new List<Common.Menus>();
                            List<Common.Menus> ListMenu1 = new List<Common.Menus>();
                            ListMenu = menubussiness.SearchMenusByParentId(-1, 3);
                            foreach (var re in ListMenu)
                            {
                                ListMenu1 = menubussiness.SearchMenusByParentId(re.Id);
                                if (ListMenu1.Count > 0)
                                {
                                    <li>
                                        <a data-target="#@re.Id">@re.MenuName</a>
                                    </li>
                                }
                                else
                                {
                                    <li><a href="@Util.ReturnLinkFull(re.Link)">@re.MenuName</a></li>
                                }
                            }
                        }
                    </ul>

                    @Html.Action("GetByCodeHtml", "Partial", new { Code = "Text_MenuMobile" })
                </div>
            </div>
        </div>
    </div>
</div>

@{
    MenusBusiness menuSubbussiness = new MenusBusiness();
    List<Common.Menus> ListSubMenu = new List<Common.Menus>();
    List<Common.Menus> ListSubMenu1 = new List<Common.Menus>();
    ListSubMenu = menuSubbussiness.SearchMenusByParentId(-1, 3);
    foreach (var re in ListSubMenu)
    {
        ListSubMenu1 = menubussiness.SearchMenusByParentId(re.Id);
        if (ListSubMenu1.Count > 0)
        {
            <div class="container-fluid header-sub" id="@re.Id">
                <div class="row">
                    <div class="col-md-12">
                        <div class="slider-menu">
                            <div id="sync-menu" class="sync-menu owl-carousel owl-theme">
                                @{
                                    Business.ClassBusiness.AlbumImagesBusiness albumImagesBusiness = new Business.ClassBusiness.AlbumImagesBusiness();
                                    List<Common.AlbumImage> listImages = albumImagesBusiness.GetListByAlbum("slider_mobile");
                                    foreach (Common.AlbumImage item in listImages)
                                    {
                                        <div class="item">
                                            <a href="@Util.ReturnLinkFull(item.Link)">
                                                <img data-src='@Util.ReturnLinkCDN(item.ImageSource,Request.Browser.IsMobileDevice)' class="lazyload" border='0' alt="@item.Title" />
                                            </a>
                                        </div>
                                    }
                                }
                            </div>
                        </div>
                    </div>
                </div>
                <div class="container">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="list-menu">
                                <ul class="list-main list-mobile">
                                    @foreach (var re1 in ListSubMenu1)
                                    {
                                        <li>
                                            <a href="@Util.ReturnLinkFull(re1.Link)">@re1.MenuName</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}