@using Microsoft.Ajax.Utilities
@model List<Common.Member>

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="main-container col1-layout content-color color">


    <div class="container">
        <div class="main">
            <div class="row">
                <div class="col-main col-lg-12">
                    <div class="account-login">
                        <div class="page-title">
                            <h1>Xác nhận quên mật khẩu</h1>
                        </div>
                        @Html.Raw(Common.util.Function.MessengerBox("success-msg", ViewBag.Mes))
                        <form method="post" id="login-form" action="/Login/Forgot">
                            <div class="row">
                                <div class="col-lg-12 new-users account-login-title new-users-title">
                                    <div class="content">
                                        <div class="account-login-title registered-users-title">
                                            <h2>Bạn cần nhập địa chỉ mail, hệ thống sẽ gửi mail xác nhận tới bạn</h2>
                                        </div>

                                        <ul class="form-list">
                                            <li>
                                                <label for="email" class="required"><em>*</em>Nhập email</label>
                                                <div class="input-box">
                                                    <input type="text" name="mail" value="" id="mail" class="input-text required-entry " style="width: 50%" title="Tên đăng nhập hoặc email">
                                                </div>
                                            </li>

                                        </ul>
                                        <button type="submit" class="button btn-sm" title="Login" name="send" id="send2" onclick="login()"><span><span>Gửi thông tin</span></span></button>
                                    </div>
                                  
                                </div>

                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

<style>
    a.button {
        background-color: #666666;
        border-color: #eaeaea;
        color: #ffffff;
    }

        a.button:hover {
            background-color: #ff3366;
            border-color: #ff3366;
            color: #ffffff;
        }

    .account-login .buttons-set a.button span {
    }
</style>
