        public static DateTime ConvertDateTime(string str)
        {
            DateTime dt = new DateTime();
            if (!string.IsNullOrEmpty(str))
            {
                var time = str.Split('/');
                string date = time[1] + "/" + time[0] + "/" + time[2];
                return DateTime.Parse(date);
            }
            else
            {
                return dt;
            }

        }

