                                            <td> {{odt.NameProduct}}</td>
                                            <td> {{odt.Price}}</td>
                                            <td> {{odt.Quantity}}</td>
                                            <td> {{odt.Description}}</td>
                                            <td> {{odt.Status}}</td>
                                        </tr>


                                    </tbody>
                                </table>

