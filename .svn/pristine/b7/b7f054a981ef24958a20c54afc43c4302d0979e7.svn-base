    var idOrderPost = -1;
    function GetIdOfOrder(id) {
        idOrderPost = id;        
    }

    function UpdateStatusOrders() {
        //alert("tessstststst");
        $('#overbackgroud').show();

        var selectedItem = $("#orderSt").val();

        //alert("gia tri: " + selectedItem);
