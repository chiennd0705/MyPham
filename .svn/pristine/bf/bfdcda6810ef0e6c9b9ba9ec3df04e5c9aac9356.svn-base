                                                                            @Html.DropDownList("categoryproduct", null, new { @height = "100px", @size = "18", @width = "100%", @onclick = "GetValueManuface()" })

                                                                        </div>
                                                                    </div>
                                                                    <div class="col-lg-6">
                                                                        @*<label>Manufaceture</label><br />
                                            <select size="18" style="width: 100%" id="manufaceture" name="manufaceture"></select>*@
                                        @*</div>
                                            </div>*@

