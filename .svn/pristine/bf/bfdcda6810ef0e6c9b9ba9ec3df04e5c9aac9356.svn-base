                                                    }
                                                    function SetIsactive() {
                                                        var a = $('#isattactive').is(":checked");
                                                        if (!a) {
                                                            $('#isattactive').val(1);
                                                        } else { $('#isattactive').val(0); }

                                                    }
                                                    function SetIsvip() {
                                                        var a = $('#isvip').is(":checked");
                                                        if (!a) {
                                                            $('#isvip').val(1);
                                                        } else { $('#isvip').val(0); }

                                                    }
