        <script>
            function SetvaluProperty(id, pro) {
                var idd = '#optionsRadiosInline' + id;
                if ($(idd).is(':checked')) {
                    var pr = $("#proprerty" + pro).val();
                    var vl = "|" + $(idd).val();
                    pr += vl;
                    $("#proprerty" + pro).val(pr);
                }
                else {
                    var pr1 = $("#proprerty" + pro).val();
                    var vl1 = "|" + $(idd).val();
                    var c = pr1.replace(vl1, "");
                    $("#proprerty" + pro).val(c);

                }
            }
        </script>
