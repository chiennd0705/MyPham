<input type="hidden" id="km" value="0" >
<script>
    function CountKm(from, to,gram) {
     var km=0 ;
        $.ajax({
            url:'@Url.Action("CountKm", "PayGoods")',
            data: {
                'from':from,
                'to':to,
                'gram':gram
            },
            Type:'POST',
            dataType:'json',
            success: function(data) {
                $('#km').val(data);
            },
            error:function() {
              
            }
        });
      
    }
    function Onbind() {
        var vat= $('#km').val();
        var tienvat= formatNumber(vat) + " đ";
        $('#vatTransport').html("");
        $('#vatTransport').append(tienvat);
        var total = $("#totamoney").val();
        var totalpay = parseFloat(vat) + parseFloat(total);

        var tien = formatNumber(totalpay) + " đ";
        $('#totalmoneypay').html("");
        $('#totalmoneypay').append(tien);
    }
 
    function SetVat(type) {
        var text = "";
        if (type == '1') {
            text = $("#Location option:selected").text();
        }
        else  if (type == '2') {
            text =$("#receiverTown option:selected").text()+"-"+ $("#Location option:selected").text();
        } else {
            text =$("#receiverPhuong option:selected").text()+"-"+ $("#receiverTown option:selected").text()+"-"+ $("#Location option:selected").text();
        }
       
        var shopadress= $('#locationshop').val();
        debugger;
        var gram = $('#totalgramshop').val();// trong lượng của 1 đơn hàng

        CountKm(shopadress, text, gram);
        setTimeout("Onbind()",1000);
    }
    function LoadChild(level) {
        var int = parseInt(level);
        var parent = 0;
        if (int == 1) {
            parent = $("#Location").val();
            SetVat(1);

            // alert(a);

        } else  {
            parent = $("#receiverTown").val();
            SetVat(2);
        }

        $.ajax({
            url: '@Url.Action("GetLocationByParent","PayGoods")',
            data: {
                'parentId': parent
            },
            Type: 'POST',
            dataType: 'json',
            success: function (data) {

                if (int == 1) {
                    $('#receiverTown').html("");
                    $('#receiverTown').append(data);
                } else{
                    $('#receiverPhuong').html("");
                    $('#receiverPhuong').append(data);

                }},
            error: function() {

            }
        });
    }
    function DeleteItem(id) {
        alert(id);
        $.ajax({
            url: '@Url.Action("DeleteCart", "PayGoods")',
            data: {
                ' id ': id,
                'tp':"item"
            },
            Type: 'POST',
            dataType: 'json',
            success: function (data) {
                alert(data);
                if (data == 1) {
                    window.location.href = "/PayGoods/Payment";
                } else {
                    window.location.href = "/";
                }
            },
            error: function () {

            }
        });
    }
    function ContinuePay() {
        $('#checkout1').hide();
        $('#checkout-1').removeClass('current');
        $('#checkout-1').removeClass('active');
        $('#checkout2').show();
        $('#checkout-1').addClass('complete');
        $('#checkout-2').addClass('current');
        $('#checkout-2').addClass('active');

    }
    function SelectPayContinue() {
        var a = ValidilationFrom();
        if (a) {
            $('#checkout3').show();
            $('#checkout2').hide();
            $('#selecttypePay').hide();
            $('#checkout-2').removeClass('current');
            $('#checkout-2').removeClass('active');
            $('#checkout-2').addClass('complete');
            $('#checkout-3').addClass('current');
            $('#checkout-3').addClass('active');
        }
      
    }
</script>
