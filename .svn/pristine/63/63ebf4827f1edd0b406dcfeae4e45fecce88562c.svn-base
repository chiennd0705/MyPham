        @*Properties*@

        <div class="modal fade" id="Properties" tabindex="-1" role="dialog" aria-labelledby="PropertiesModalLabel" aria-hidden="true" style="overflow-y: scroll">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">
                            <img src="~/img/IconMain/properties.ico" width="20" /> Manage Properties
                        </h4>
                    </div>
                    <div class="modal-body">
                        <input id="hidecateProperty" type="hidden" />
                        <div class="row" id="oldcontentproperty">

                        </div>
                        <div class="row" id="contentproperty">

                        </div>

                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default" data-toggle="modal" data-target="#AddProperties" onclick="OnfowadId()">
                            Add Properties
                        </a>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>

                    </div>

                </div>

            </div>
        </div>
        <script>
            function OnfowadId() {
                var vl = $('#hidecateProperty').val();
                $('#catlg').val(vl);
                $('#nameproperty').val("");
                $('#value').html("");
                $("#allvalue").val("");
                $('#index').val(1);
            }
        </script>
        @*Add Properties*@
        <div class="modal fade" id="AddProperties" tabindex="-1" role="dialog" aria-labelledby="AddPropertiesModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">    Add Properties</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <input type="hidden" id="catlg" />
                            <div class="form-group col-lg-4">
                                <label>Name<span class="required">*</span></label><br />
                                <input class="form-control" autocomplete="off" maxlength="50" required id="nameproperty" name="nameproperty" type="text" value="">

                            </div>
                            <div class="form-group col-lg-4">
                                <label>Type<span class="required">*</span></label><br />
                                <input type="checkbox" id="typevalue" value="2" onclick="SetCheck()" checked="checked"> Loại check box?
                            </div>

                        </div>
                        <hr />
                        <div class="row">
                            <div id="value"></div>
                            <div style="float:right"><a onclick="Addvalue()" class="btn btn-primary btn-sm">Thêm giá trị</a></div>
                            <input type="hidden" id="allvalue" />
                            <input id="index" value="1" type="hidden" />
                        </div>
                        <script>
                            
                            function Addvalue() {
                                var index = $("#index").val();
                                var html = "";
                                html += "<p><i class=\"fa fa-angle-double-right\">   </i> <input id='value" + index + "' onchange=\"SendValue(" + index + ")\"></p>";
                                $("#value").append(html);
                                index++;
                                $('#index').val(index);
                            }
                            function SetCheck() {
                                var a = $('#typevalue').is(":checked");
                                if (!a) {
                                    $('#typevalue').val(1);
                                } else { $('#typevalue').val(2); }

                            }
                        </script>
                    </div>
                    <div class="modal-footer">
                        <span style="color: red"><i>(Vui lòng 'thêm giá trị' trước khi thêm mới)</i></span> <a class="btn btn-default" data-toggle="modal" data-target="#AddProperties" onclick="Addproperty()">
                           Thêm mới
                        </a>
                        <script>
                            function Addproperty() {
                                $('#index').val(1);
                                $('#overbackgroud').show();
                                var cat = $('#catlg').val();
                          //      alert(cat);
                                var name = $('#nameproperty').val();
                              //  var key = $('#keyproperty').val();
                                var type = $('#typevalue').val();
                                var value = $('#allvalue').val();
                                var objval = value.split('|');
                                var htmlval = "";
                                for (var i = 0; i < objval.length - 1; i++) {
                                    htmlval += "<p>+" + objval[i] + "</p>";
                                }

                                var html = "";
                                if (type == "1") {
                                    html = "<div class=\"panel panel-default\">" +
                                        "<div class=\"panel-heading\">" +
                                        "<h3 class=\"panel-title\">" +
                                        "  <input type=\"text\" value=\"" + name + "\" />" +
                                  
                                        "<label><input type=\"checkbox\" id =\"typeproperty\" value=\"1\">  Loại check box?</label></h3> </div>" +
                                        "<div class=\"panel-body\">" + htmlval + " </div></div>";
                                    $('#contentproperty').append(html);
                                } else {
                                    html = "<div class=\"panel panel-default\">" +
                                        "<div class=\"panel-heading\">" +
                                        "<h3 class=\"panel-title\">" +
                                        "  <input type=\"text\" value=\"" + name + "\" />" +
                                        "<label><input type=\"checkbox\" id =\"typeproperty\" value=\"2\" checked=\"checked\">Loại check box? </label></h3> </div>" +
                                        "<div class=\"panel-body\">" + htmlval + " </div></div>";
                                    $('#contentproperty').append(html);
                                }
                                $.ajax({
                                    url: '@Url.Action("AddProperty","CategoryProduct")',
                                    data: {
                                        'nameproperty': name,
                                        'typevalue': type,
                                        'cate': cat,
                                        'allvalue': value
                                    },
                                    dataType: "json",
                                    type: "POST",
                                    traditional: true,
                                    success: function (data, status) {
                                        if (data == "1") {
                                            $('#overbackgroud').hide();
                                        }
                                        else {
                                            alert("Lỗi");
                                            $('#overbackgroud').hide();
                                        }
                                    },
                                    error: function () {

                                    }

                                });
                           
                            }
                            function SendValue(id) {
                                var index = $('#index').val();
                                var ix = parseInt(index);
                                var htm = "";
                                for (var i = 1; i < ix; i++) {
                                    var vl = $('#value' + i).val();
                                    if (vl != "") {
                                        htm += vl + "|";
                                    }
                                }
                                //var a = $('#allvalue').val();
                                //var b = $('#value' + id).val();
                                //var ctx = a + b + '|';
                                $('#allvalue').val(htm);

                            }
                        </script>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>

                    </div>

                </div>

            </div>
        </div>
        @*Add Value*@
        <div class="modal fade" id="AddValue" tabindex="-1" role="dialog" aria-labelledby="AddPropertiesModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">     AddValue</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="form-group">
                                <label>Value<span class="required">*</span></label><br />
                                <input class="form-control" autocomplete="off" maxlength="50" required id="valueproperty" name="valueproperty" type="text" value="">

                            </div>


                        </div>

                    </div>
                    <div class="modal-footer">
                        <a class="btn btn-default" data-dismiss="modal" onclick="AddValue1()">
                            AddValue
                        </a>
                        <script>
