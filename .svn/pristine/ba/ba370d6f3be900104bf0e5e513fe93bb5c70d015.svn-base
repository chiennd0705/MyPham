<script>
    function updatecart(id) {
        $('#overbackgroud1').show();
        //  alert(id);
        var sl = $('#qty').val();

        //    alert(sl);
        $.ajax({
            url: '@Url.Action("ViewCart", "Ajax")',
            data: {
                'id': id,
                'sl': sl
            },
            dataType: 'json',
            Type: 'POST',
            success: function (data) {
                //  var count = $.map(data, function(n, i) { return i; }).length;
                var html = "";
                var total = 0;
                var sl1 = 0;
                var htmlpoup = "";
                //htmlpoup += " <tr style=\"background-color: #669933;\"><td colspan=\"2\" height=\"20\" width=\"120\" style=\"font-weight: bold;\">Sản phẩm</td>  <td width=\"120\" style=\"text-align: center;font-weight: bold;\">Đơn giá</td> <td width=\"80\"  style=\"text-align: center;font-weight: bold;\">Số lượng</td> <td width=\"120\"  style=\"text-align: center;font-weight: bold;\">Thành tiền</td></tr>";
                $.each(data, function (key, value) {
                    //alert(value.FriendlyUrl);
                    var strurl = "/" + value.FriendlyUrl + "-ct" + value.Id;
                    //   var url =string.Format("/{0}-ct{1}", url, id);
                    //        html += "  <li><i class=\"fa fa-angle-double-right\"></i><span> " + value.ProductName + "</span> <strong>(" + value.Quantity + ")</strong></li>";
                    sl1 += parseInt(value.Quantity); //    alert( key + ": " + value );
                    total += parseInt(value.Quantity) * parseFloat(value.Price);
                    var thanhtien = parseInt(value.Quantity) * parseFloat(value.Price);
                    html += " <li class=\"item clearfix odd\" id=\"cartItem_" + value.Id + "\">" + "<div class=\"cart-content-top\">" + "<a href=\"" + strurl + "\" title=\"" + value.ProductName + "\" target=\"_blank\" class=\"product-image\">" +
                        "<img src=\"" + value.AvatarUrl + "\" width=\"60\" height=\"77\" alt=\"" + value.ProductName + "\">   </a>" +
                        "<div class=\"product-details\">" +
                        "<p class=\"product-name\"><a target=\"_blank\" href=\"" + strurl + "\">" + value.ProductName + "</a></p>" +
                        "<strong>" + formatNumber(value.Quantity) + "</strong> x <span class=\"price\"> " + formatNumber(value.Price) + " <sup class=\"u-price\">đ</sup></span>  </div></div>" +
                        "<div class=\"cart-content-bottom\">" +
                        "<div class=\"clearfix\">" +
                        "<a href=\"#\" title=\"Edit item\" class=\"btn-edit\"><i class=\"fa fa-pencil-square-o\"></i></a>" +
                        "<a href=\"#\" title=\"Remove\" onclick=\"DeleteItemCart(" + value.Id + ")\" class=\"btn-remove btn-remove2\"><i class=\"icon-close icons\"></i></a></div></div></li>";

                    htmlpoup += " <tr>  <td style=\"text-align: center;\"><img src=\"" + value.AvatarUrl + "\" width=\"60\"  alt=\"" + value.ProductName + "\"></td> " +
                        "<td>" + value.ProductName + "</td> " +
                        "<td style=\"text-align: right\">" + formatNumber(value.Price) + "<sup class=\"u-price\">đ</sup></span></td>" +
                        "<td style=\"text-align: center\">" + formatNumber(value.Quantity) + "</td>" +
                        "<td style=\"text-align: right\">" + formatNumber(thanhtien) + "<sup class=\"u-price\">đ</sup></span></td>   </tr>";
                });

                var htmcontent = " <div class=\"block-content\">" +
                    "<p class=\"block-subtitle\">Giỏ hàng của bạn</p>" +
                    "<ol id=\"cart-sidebar\" class=\"mini-products-list clearfix\">" + html +
                    "</ol>" +
                    "<p class=\"subtotal\">" +
                    "<span class=\"label\">Tổng :</span> <span class=\"price\" id=\"totalPice\">" + formatNumber(total) + "<sup class=\"u-price\">đ</sup></span>" +
                    +"</p>" +
                    "<div class=\"actions\">" +
                    "<a href=\"/PayGoods/Payment\" class=\"view-cart\">View cart </a><a href=\"/PayGoods/Payment\" class=\"checkout\">Checkout   </a>  </div></div>";

                htmlpoup += "<tr height=\"20\"><td  colspan=\"4\"style=\"text-align: right;padding-top: 25px;  font-size: 17px;border-bottom: none;\">Thành tiền:  </td><td align=\"right\" style=\"padding-top: 25px; text-align: right; bold; font-size: 18px;border-bottom: none;color: #ff3366\">" + formatNumber(total) + "<sup class=\"u-price\">đ</sup></span></td> </tr>";

                $('#numberProduct').html("");
                $('#numberProduct').append(" <span class=\"zero\">" + sl1 + " </span>");
                $('.mini-contentCart').html("");
                $('.mini-contentCart').append(htmcontent);
                $('#overbackgroud1').hide();
                //alert("Đã thêm " + sl + " sản phẩm vào giỏ hàng!");
                $('#contentCart').html("");
                $('#contentCart').append(htmlpoup);



            },
            error: function () {

            }
        });
    }
    function formatNumber(num) {
        return num.toString().replace(/(\d)(?=(\d{3})+(?!\d))/g, "$1,");
    }
</script>
